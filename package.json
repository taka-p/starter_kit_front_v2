{
  "name": "front_ver2",
  "version": "1.0.0",
  "description": "webpack中心の構成",
  "main": "index.js",
  "scripts": {
    "yarn_init": "npm install -g yarn && yarn && export PATH=$(yarn global bin):$PATH && source ~/.bashrc && source ~/.zshrc",
    "global_init": "yarn global add gulp webpack browser-sync",
    "watch_css": "gulp watchCss",
    "watch_js": "webpack -w --display-error-details --development --debug",
    "server": "browser-sync start --config bs-config.js",
    "start": "yarn watch_css & yarn watch_js & yarn server",
    "clean-dev": "rm -rf app/assets_dev/build/**",
    "clean-prod": "rm -rf app/assets/**",
    "build-dev": "yarn clean-dev && webpack --display-error-details --development --debug",
    "build-prod": "yarn clean-prod && webpack --production"
  },
  "repository": {
    "type": "git",
    "url": "hoge"
  },
  "keywords": [
    "hoge"
  ],
  "author": "Takashi Sato",
  "license": "ISC",
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "browser-sync": "^2.18.7",
    "css-loader": "^0.26.1",
    "doiuse": "^2.5.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.4.1",
    "path": "^0.12.7",
    "postcss-assets": "^4.1.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-reporter": "^3.0.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.8.0",
    "webpack": "1.14.0",
    "webpack-notifier": "^1.5.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "global": "^4.3.1"
  }
}
